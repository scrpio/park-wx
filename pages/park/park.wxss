.park-warp{
  font-size: 14px;
  height: 100vh;
  background-color: #e4e4e4;
}
.park-banner{
  display: flex;
  width: 100%;
}
swiper{
  height: 320px;
  width: 375px;
}
.swiper-item{
  height: 372px;
  width: 375px;
}
.park-info{
  padding-left: 8px;
  padding-right: 25px;
  background-color: #fff;
}
.info-title{
  height: 40px;
  padding-top: 8px;
}
.info-address{
  height: 20px;
  padding-top: 5px;
  padding-bottom: 8px;
}
.park-title{
  float: left;
  font-size: 18px;
  font-weight: 600;
  padding-top: 10px;
}
.park-nav{
  float: right;
  width: 40px;
  height: 40px;
  border-radius: 40px;
  text-align: center;
  background-color: #ff9900;
}
.park-nav image{
  width: 24px;
  height: 24px;
  padding-top: 10px;
}
.park-address{
  float: left;
}
.park-distance{
  float: right;
  color: #999;
}
.clear{
  clear: both;
}
.park-car{
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
}
.car-num{
  display: inline-block;
  text-align: center;
  width: 49%;
  border-right: 1px solid #e4e4e4;
}
.car-price{
  display: inline-block;
  text-align: center;
  width: 50%;
}
.car-top{
  padding-top: 8px;
  padding-bottom: 5px;
}
.car-bottom{
  color: #999;
  padding-bottom: 8px;
}
.park-remark{
  margin-top: 8px;
  padding: 8px 10px;
  background-color: #fff;
}
.remark-title{
  color: #999;
  padding-bottom: 5px;
}
.park-btn{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.park-btn button{
  border-radius: 0;
}