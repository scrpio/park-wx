.page-section-gap{
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden;
}
.btn{
  width:100%;
  display:-webkit-box;
  display:-ms-flexbox;
  display:flex;
  -webkit-box-orient:horizontal;
  -webkit-box-direction:normal;
  -ms-flex-direction:row;
  flex-direction:row;
  font-size:32rpx;
  -webkit-box-pack:center;
  -ms-flex-pack:center;
  justify-content:center;
  position:relative;
}
.btn,.btn:before{
  box-sizing:border-box;
}
.btn:before{
  content:'';
  width:200%;
  height:0;
  position:absolute;
  left:0;
  bottom:0;
  border-bottom:2rpx solid #d6d6d6;
  -webkit-transform:scale(.5);
  transform:scale(.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
}
.btn view{
  width:50%;
  height:2rem;
  line-height:2rem;
  text-align:center;
  color:#000;
  font-weight:500;
}
.btn view.active{
  color:#ff9900;
  position:relative;
}
.btn view.active:after{
  content:'';
  width:200%;
  height:0;
  position:absolute;
  left:0;
  bottom:-.053333rem;
  border-bottom:8rpx solid #ff9900;
  -webkit-transform:scale(.5);
  transform:scale(.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
}
.content{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color:#e4e4e4;
}
.order-list{
  margin-top: 16rpx;
  background-color:#fff;
}
.list-top{
  height: 42rpx;
  padding: 20rpx 16rpx;
}
.item-title{
  float: left;
  font-size: 30rpx;
}
.item-detail{
  float: right;
  font-size: 28rpx;
  color: #999;
}
.list-bottom{
  height: 144rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-bottom: 24rpx;
  background-color: #fafafa;
}
.item-left{
  float: left;
}
.item-info{
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.item-info image{
  width: 16rpx;
  height: 16rpx;
  margin-right: 10rpx;
}
.item-status{
  float: right;
  font-size: 28rpx;
  font-weight: 550;
  margin-top: 10rpx;
}