.page-section-gap{
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden;
}
.header{
  height: 70rpx;
  margin: 15rpx;
}
.header-left{
  float: left;
  line-height: 60rpx;
}
.header-left text{
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.header-right{
  float: right;
}
.list-section {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
}
.list-section image {
  height:12rpx;
  width:14rpx;
  margin-top:12rpx;
  margin-left:10rpx;
  margin-right:10rpx;
}
.select_box {
  border: 2rpx solid #ccc;
  background-color: #fff;
  padding: 0 10rpx;
  width: 13%;
  position: absolute;
  top: 70rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
}
@keyframes myfirst {
  from {
    height: 0rpx;
  }
  to {
    height: 210rpx;
  }
}
.select_one {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-bottom: 1px solid #ccc;
}
.select_one:last-child{
  border-bottom: none;
}
.content{
  width: 100%;
  height: 100%;
}
.list{
  height: 100rpx;
  padding: 20rpx;
  margin: 0 15rpx 15rpx;
  border-radius: 10rpx;
  background-color: #f1f1f1;
}
.item-left{
  float: left;
}
.item-type{
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 10rpx;
}
.item-time{
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.item-right{
  float: right;
}
.income-status {
  color: green;
  float: right;
  font-weight: 600;
  margin-top: 10rpx;
  line-height: 85rpx;
}
.outlay-status {
  color: red;
  float: right;
  font-weight: 600;
  margin-top: 10rpx;
  line-height: 85rpx;
}