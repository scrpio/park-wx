.pay-warp{
  font-size: 14px;
  background-color:#f1f1f1;
  height: 100vh;
}
.order-info{
  margin-bottom: 10px;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  background-color: #fff;
}
.order-title{
  font-size: 15px;
  font-weight: 800;
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 10px;
}
.order-content{
  padding: 0 10px 10px;
  background-color: #fff;
}
.order-item{
  font-size: 14px;
  padding-bottom: 8px;
}
.order-item text{
  color: rgb(0, 0, 255);
  font-size: 16px;
}
.section_radio{
  margin-top: 10px;
  border-top: 1px solid #e4e4e4;
}
.pay-item{
  height: 24px;
  padding: 10px;
  background-color: #fff;
  border-bottom: 1px solid #e4e4e4;
}
.pay-item label{
  float: left;
  font-size: 16px;
}
.pay-radio{
  float: right;
}
.pay-money{
  position: absolute;
  bottom: 0;
  border-top: 1px solid #e4e4e4;
  background-color: #fff;
  width: 100%;
}
.pay-span{
  font-size: 14px;
  float: right;
  margin-top: 10px;
  margin-right: 10px;
}
.pay-text{
  color: red;
  font-size: 20px;
  font-weight: 550;
}
.pay-btn{
  border-radius: 0;
  width: 100px;
  float: right;
}