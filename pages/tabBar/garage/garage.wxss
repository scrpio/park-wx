.page-warp{
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden;
}
.btn{
  width:100%;
  display:-webkit-box;
  display:-ms-flexbox;
  display:flex;
  -webkit-box-orient:horizontal;
  -webkit-box-direction:normal;
  -ms-flex-direction:row;
  flex-direction:row;
  font-size:32rpx;
  -webkit-box-pack:center;
  -ms-flex-pack:center;
  justify-content:center;
  background:#fafafa;
  position:relative;
}
.btn,.btn:before{
  box-sizing:border-box;
}
.btn:before{
  content:'';
  width:200%;
  height:0;
  position:absolute;
  left:0;
  bottom:0;
  border-bottom:2rpx solid #d6d6d6;
  -webkit-transform:scale(.5);
  transform:scale(.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
}
.btn view{
  width:50%;
  height:2rem;
  line-height:2rem;
  text-align:center;
  color:#000;
  font-weight:500;
}
.btn view.active{
  color:#59a5f0;
  position:relative;
}
.btn view.active:after{
  content:'';
  width:200%;
  height:0;
  position:absolute;
  left:0;
  bottom:-.053333rem;
  border-bottom:4px solid #59a5f0;
  -webkit-transform:scale(.5);
  transform:scale(.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
}
.current{
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  background-color: #fddfbb;
}
.current image {
  height: 24rpx;
  width: 24rpx;
  float: right;
}
.content{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.list-item{
  padding: 15rpx 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.item-left{
  text-align: left;
  width: 70%;
  display: inline-block;
}
.item-right{
  float: right;
}
.item-title{
  font-size: 28rpx;
}
.item-text{
  font-size: 24rpx;
  color: #999;
}
.item-p{
  font-size: 24rpx;
  color: #999;
  padding-right: 10rpx;
  border-right: 2rpx solid #999;
}
.item-a{
  font-size: 24rpx;
  color: #1e71bb;
}
.item-tip{
  font-size: 28rpx;
  color: red;
}
.ml10{
  margin-left: 10rpx;
}
.mt30{
  margin-top: 30rpx;
}
.pr30{
  padding-right: 30rpx;
}
.item-btn{
  font-size: 24rpx;
  color: white;
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: none;
  border-radius: 35rpx;
  background-color: #ff9900;
}